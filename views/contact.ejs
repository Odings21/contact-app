<div class="container mt-3">
    <div class="row">
        <div class="col-md8">
            <h2>Daftar Contact</h2>
            
            <a href="/contact/add" class="btn btn-primary mb-2">Tambah Data Contact</a>

            <% if (msg.length !== 0) { %>
              <div class="alert alert-success" role="alert">
                <%= msg %> 
              </div>
            <% } %>

            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nama</th>
                    <th scope="col">No HP</th>
                    <th scope="col">Aksi</th>
                  </tr>
                </thead>
                <tbody>
                  <% contacts.forEach((contact, i) => { i++ %>
                    <tr>
                      <th scope="row"><%= i++ %></th>
                      <td><%= contact.nama  %></td>
                      <td><%= contact.noHp  %></td>
                      <td>
                          <a href="/contact/<%= contact.nama %> " class="btn btn-success badge rounded"   ><i class="bi bi-info-circle"></i>detail</a>
                        </td>
                      </tr>
                  <% }) %>
                  <tr>
                    <td colspan="4">
                      <% if (contacts.length === 0) { %>
                        <div class="alert alert-danger fw-bold" role="alert">
                          Data contact masih kosong.
                        </div>
                      <% } %>
                    </td>
                  </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>